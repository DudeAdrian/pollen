# ============================================
# POLLEN CONFIGURATION
# Personal AI Agent â€” Seven Pillar Architecture
# ============================================

# Instance Identity
USER_ID=0x...
INSTANCE_ID=pollen-${USER_ID:0:8}
ENCRYPTION_KEY_PATH=./keys/instance.key

# Database (PostgreSQL per instance)
DATABASE_URL=postgresql://pollen:secure@localhost:5432/pollen_${USER_ID}
DATABASE_ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Redis (for caching, sessions)
REDIS_URL=redis://localhost:6379/0

# API Server
PORT=9000
API_HOST=0.0.0.0
NODE_ENV=production

# ============================================
# TERRACARE LEDGER (Layer 1)
# ============================================
TERRACARE_RPC_URL=http://localhost:8545
TERRACARE_CHAIN_ID=1337
IDENTITY_REGISTRY_ADDRESS=0x...
TOKEN_ENGINE_ADDRESS=0x...
ACTIVITY_REGISTRY_ADDRESS=0x...

# Wallet (HSM recommended for production)
WALLET_PRIVATE_KEY=0x... # Or use HSM
HSM_ENABLED=false
HSM_PROVIDER=aws|azure|hashicorp

# ============================================
# SOFIE SYSTEMS (Layer 2)
# ============================================
SOFIE_SYSTEMS_URL=http://localhost:8001
SOFIE_WEBSOCKET_URL=ws://localhost:8001/ws

# ============================================
# SOFIE BACKEND (API Layer)
# ============================================
SOFIE_BACKEND_URL=http://localhost:8000
SOFIE_API_KEY=...

# ============================================
# SANDIRONRATIO-NODE (Layer 3 - Hive)
# ============================================
SANDIRONRATIO_API_URL=http://localhost:3000
SANDIRONRATIO_WS_URL=ws://localhost:9001
VALIDATOR_ADDRESS=0xa85233C63b9Ee964Add6F2cffe00Fd84eb32338f

# Hive Configuration
HIVE_ENABLED=true
HEXCELL_AUTO_ASSIGN=true
MAX_NEIGHBORS=6
PHEROMONE_SHARING=true

# ============================================
# HEARTWARE (Layer 3 - Biometrics)
# ============================================
HEARTWARE_URL=http://localhost:3001
HEARTWARE_API_KEY=...
WEARABLE_DEVICE_ID=...
BIOMETRIC_STREAM_INTERVAL_MS=5000

# ============================================
# HARMONIC-BALANCE (Layer 3 - Environment)
# ============================================
HARMONIC_BALANCE_URL=http://localhost:8002
FREQUENCY_THERAPY_ENABLED=true
SCHUMANN_RESONANCE=7.83

# ============================================
# POLLEN HUM (Sofie Voice)
# ============================================
HUM_ENABLED=true
HUM_WEBSOCKET_URL=ws://localhost:8001/hum
VOICE_RECOGNITION_ENABLED=true
WAKE_WORD=Pollen

# ============================================
# SECURITY
# ============================================
JWT_SECRET=your-256-bit-secret-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Biometric Encryption
BIOMETRIC_ENCRYPTION_KEY=...
BIOMETRIC_HSM_ENABLED=false

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_TO_BLOCKCHAIN=true

# ============================================
# ECONOMICS (Pillar 7)
# ============================================
MINE_EARNING_ENABLED=true
AUTO_CONVERT_MINE=false
MINE_TO_WELL_RATIO=100
STAKING_ENABLED=true
MIN_STAKE_AMOUNT=1000

# Revenue Share (percentages)
PLATFORM_SHARE=10
USER_SHARE=60
RESERVE_SHARE=30

# ============================================
# AUTONOMY BOUNDS (User-configurable)
# ============================================
MAX_AUTONOMOUS_SPEND=100
ALLOWED_ACTIONS=therapy,recommendation,scheduling
REQUIRE_APPROVAL_FOR=spending,data_export,hive_vote
AUTONOMY_LEVEL=assisted # assisted|semi|full

# ============================================
# PLUGIN SYSTEM (Pillar 5-6)
# ============================================
PLUGINS_ENABLED=true
PLUGIN_MARKETPLACE_URL=https://plugins.pollen.eco
ALLOW_UNOFFICIAL_PLUGINS=false
CODE_GENERATION_ENABLED=true

# ============================================
# DEVELOPMENT
# ============================================
LOG_LEVEL=info
DEBUG_MODE=false
METRICS_ENABLED=true
